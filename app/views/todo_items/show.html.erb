<div style="padding-left: 18px">
	<%= link_to '', todo_items_path, title: 'Back', rel: 'tooltip', class: "btn btn-primary fa fa-arrow-left " %>
	<%= link_to '', edit_todo_item_path(@todo_item), title: 'Edit', rel: 'tooltip', class: "btn btn-primary fa fa-pencil-square-o " %>
</div>

<p id="notice"><%= notice %></p>
<div style="padding-left: 17px;width: 30%">
<div> &nbsp;</div>
<table class="table table-striped table-bordered table-condensed">
	<tr>
		<td> <strong>Title:</strong> </td>
  		<td> <%= @todo_item.title %> </td>
	</tr>	
	<tr>
		<td><strong>Description:</strong></td>			
  		<td><%= @todo_item.description %></td>
	</tr>
	<tr>
		<td> <strong>Shared With:</strong> </td>
		<td> <%= get_shared_user(@todo_item.share_with) if !@todo_item.share_with.nil? %> </td>
  	</tr>	
	<tr>
		<td> <strong>Status:</strong> </td>
  		<td> <%= get_task_status(@todo_item.status) %> </td>	
	</tr>
</table>
</div>
